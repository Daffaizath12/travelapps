<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/listtiket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:id="@+id/TiketSection"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/card_border"
            android:padding="16dp">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Mon, 12 Aug 2024"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_above="@id/doublearrow"/>

            <TextView
                android:id="@+id/asal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Banyuwangi"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Profile Icon Button -->

            <TextView
                android:id="@+id/penumpang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Sisa Tiket : "
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/doublearrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_double_arrow" />
            <TextView
                android:id="@+id/waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="21.00 WIB"
                android:fontFamily="@font/poppinsregular"
                android:layout_below="@id/doublearrow"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Status"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Tujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Malang"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/poppinsbold"/>

                <TextView
                    android:id="@+id/harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150.000"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppinsbold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="/pax"
                    android:textColor="#A6A2A2"
                    android:fontFamily="@font/poppinsregular"/>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>