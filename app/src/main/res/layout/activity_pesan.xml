<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroud"
    tools:context=".PesanActivity">

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageButton
            android:id="@+id/backtotiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan Tiket"
            android:fontFamily="@font/poppinsextra"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardtiket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:layout_below="@+id/topbar"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/TiketSection"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/card_border"
            android:padding="16dp">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Monday, 12 Agustus"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_above="@id/doublearrow"/>

            <TextView
                android:id="@+id/asal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Banyuwangi"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Profile Icon Button -->
            <ImageView
                android:id="@+id/doublearrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_double_arrow" />
            <TextView
                android:id="@+id/waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="21.00 WIB"
                android:fontFamily="@font/poppinsregular"
                android:layout_below="@id/doublearrow"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/Tujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Malang"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:layout_below="@+id/cardtiket"
        android:backgroundTint="#E7F8F8"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/detailpemesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Detail Pemesanan"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardpemesanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_below="@+id/detailpemesanan"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Nama"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/txtNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nama"
                        android:layout_alignParentStart="true"
                        android:text="DAFFA IZAAZ AGUNG THEOLA"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/txtNama"
                        android:text="Email"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email"
                        android:layout_alignParentStart="true"
                        android:text="Daffaizath12@gmail.com"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/telp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/txtEmail"
                        android:text="No. Telp"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/txtNoTelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/telp"
                        android:layout_alignParentStart="true"
                        android:text="082235623044"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/detailpenumpang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cardpemesanan"
                android:text="Detail Penumpang"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ubahpenumpang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/cardpemesanan"
                android:paddingEnd="10dp"
                android:text="Ubah"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/btn"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardpenumpang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_below="@+id/detailpenumpang"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Teks penumpang -->
                    <TextView
                        android:id="@+id/penumpang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Penumpang"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <!-- Nama penumpang -->
                    <TextView
                        android:id="@+id/txtpenumpang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/penumpang"
                        android:layout_alignParentStart="true"
                        android:text="DAFFA IZAAZ AGUNG THEOLA"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <!-- RelativeLayout untuk informasi penumpang -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtpenumpang">

                        <!-- LinearLayout untuk informasi KTP -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/penumpang"
                                android:layout_alignParentStart="true"
                                android:text="KTP - "
                                android:fontFamily="@font/poppinsregular"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtNIK"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2145326634754754"
                                android:fontFamily="@font/poppinsregular"
                                android:textColor="@color/black"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Tambahkan ImageView untuk ikon edit -->
                    <ImageView
                        android:id="@+id/EditPenumpang"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="Edit Penumpang"
                        app:tint="@color/btn" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/selanjutnyapilihkursi"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:text="SELANJUTNYA"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/main"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>