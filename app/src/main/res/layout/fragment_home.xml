<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Background Image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banneratas" />

    </LinearLayout>

    <!-- CardView Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <!-- CardView di atas ImageView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            app:cardBackgroundColor="@color/white"
            android:background="@drawable/card_border"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Silahkan pilih lokasi anda dan tujuan anda untuk melakukan pemesanan tiket"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="11sp"
                    android:textColor="@color/btn"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asal"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="12sp"
                    android:textColor="@color/btn"
                    android:layout_marginBottom="8dp"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:background="@drawable/custom_et">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        style=""/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tujuan"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="12sp"
                    android:textColor="@color/btn"
                    android:layout_marginTop="8dp"/>
                <EditText
                    android:id="@+id/editTextTujuan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_et"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:paddingStart="10dp"
                    android:hint="Tujuan Anda" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Pergi"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="12sp"
                    android:textColor="@color/btn"
                    android:layout_marginTop="16dp"/>
                <EditText
                    android:id="@+id/etTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_et"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/ic_baseline_date_range_24"
                    android:hint="Tanggal pergi" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Penumpang"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="12sp"
                    android:textColor="@color/btn"
                    android:layout_marginTop="16dp"/>
                <EditText
                    android:id="@+id/etPenumpang"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_et"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:paddingStart="10dp"
                    android:hint="Tanggal pergi" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonPesanSekarang"
                    android:layout_width="match_parent"
                    style="@android:style/Widget.Button"
                    android:layout_height="wrap_content"
                    android:text="CARI TIKET SEKARANG"
                    android:textColor="@color/main"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="14sp"
                    android:layout_below="@id/editTextTujuan"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_shape" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Versi 1.0"
                android:textSize="12sp"
                android:textAlignment="center"
                android:fontFamily="@font/poppinsmedium"/>

        </LinearLayout>

    </RelativeLayout>

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recyclerView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="320dp"-->
<!--        android:orientation="horizontal"/>-->

</RelativeLayout>
